#include<iostream>
#include<string>
#include<ctype.h>

using namespace std;

int main()
{

string word;
int i;
int len;



  cout<<" Enter a word ";
  cin>> word;

    len = word.length();
for(i=0;i<len;i++) {
   
 
  
  if((word[i]=='a')||(word[i]=='e')||(word[i]=='i')||(word[i]=='o')||(word[i]=='u')){
     word[i]='*';
    
  }
  
    }
     cout<<word;

      }
