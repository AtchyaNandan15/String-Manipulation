#include <iostream>
#include <string> 
#include<ctype.h>
using namespace std;

int main()

{
  
  string word;
  int len;
  int totalLen;
  string totalWord;
  
  
do{
    
    cout<<" Enter a word\n";
    cout<<" Enter OK when you are done your sentence";
    cin>>word;
    
    len=word.length();
    
    cout<<"\n"<<len<<"\n";
  
    totalLen= totalLen+len;
    totalWord= totalWord+ word;

    
    }while(word!= "0");

cout<<totalLen;
cout<<totalWord;

    
    
}
