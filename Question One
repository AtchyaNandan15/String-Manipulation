* ---------------------------------------------------------------------                                
* Date Dictionary:  string word.....................................the user enters words that will create a sentence
                    string totalWord..........................................the counter for the total of words they entered
                    int len.....................................the length of the words and sentences
                    int totalLen..........................................the total length of the words and sentences

********************************************************************************************************************/

#include <iostream>
#include <string> 
#include<ctype.h>
using namespace std;

int main()

{
  
  string word;
  string totalWord;
  int len;
  int totalLen;

  
  
do{
    
    cout<<" Enter a word\n";
    cout<<" Enter OK when you are done your sentence";
    cin>>word;
    
    len=word.length();
    
    cout<<"\n"<<len<<"\n";
  
    totalLen= totalLen+len;
    totalWord= totalWord+ word;

    
    }while(word!= "0");

cout<<totalLen;
cout<<totalWord;

    
    
}
