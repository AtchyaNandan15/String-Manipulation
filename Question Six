

#include <iostream>
#include<string>
#include<ctype.h>
using namespace std;

int main()
{
    
    string word;
    string pattern;
    int pos;
    
    
    cout<<" Enter a word ";
    cin>>word;
    
    cout<<" Enter a pattern ";
    cin>>pattern;
    
    pos = word.find(pattern); 
        
        if(pos>0){
            
            cout<<" You pattern is in the word";
            
        }
        
        else {
            
            cout<<" Your pattern is not in the word";
            
        }
  
    
    
    
    
}
