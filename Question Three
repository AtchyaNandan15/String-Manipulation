#include <iostream>
#include <string> 
#include<ctype.h>
#include<bits/stdc++.h> 
using namespace std;

int main()

{


 string word, backword;

 
 cout<<" Enter a word ";
 cin>>word;
 
 backword = word;
reverse(backword.begin(),backword.end()); 

cout<<backword;

if (word == backword) {
    
    cout<<"PALINDROME";
}

else {
    cout<<" NOT A PALINDROME ";
}
  
}

